#:import Factory kivy.factory.Factory
<FrontScreenLayout>:
    anchor_x: 'center'                              
    anchor_y: 'center'
    

    BoxLayout:
        pos: self.parent.pos
        size: self.parent.size
        orientation: 'vertical'

        BoxLayout:
            size_hint: 1,3
            size:self.parent.size
            orientation: 'horizontal'

            Label:
                text: 'Select the file'
                id: MyLabel

            
            FileChooserListView:
                id: filechooser
                on_selection: fileSelectionHiddenLabel.text = self.selection and self.selection[0] or ''
        
        BoxLayout:
            size:self.parent.size
            orientation: 'vertical'
            

            Label:
                id: OutPutFileLocation
            
            Label:
                id: PriorityTestCase
            
            Label:
                id: NonPriorityTestCase
            
            Label:
                id: TotalTestCase
        
            GridLayout:
                size: self.parent.size
                cols:3

                Label:
                    text:""
                     
                Button:
                    text:"SUBMIT"
                    id: "SubmitButton"
                    size: 500, 400
                    size_hint: 1,5
                    on_release:root.InitialAction(filechooser.path, fileSelectionHiddenLabel.text)
                
                Label:
                    id:fileSelectionHiddenLabel
                    text:""
                    opacity : 0

        
        
           